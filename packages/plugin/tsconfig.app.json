{
	"include": ["src/**/*", "*.d.ts"],
	"exclude": ["src/**/__tests__/*"],
	"compilerOptions": {
		"strict": true,
		"target": "ESNext",
		"lib": ["ESNext", "DOM"],
		"composite": true,
		"outDir": "dist",
		"declarationDir": "types",
		"baseUrl": ".",
		"rootDir": "src",
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node"
	}
}
